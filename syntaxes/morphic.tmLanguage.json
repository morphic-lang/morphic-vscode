{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Morphic",
	"patterns": [
		{
			"include": "#line_comment"
		},
		{
			"include": "#pub_keyword"
		},
		{
			"include": "#type_def"
		},
		{
			"include": "#import"
		},
		{
			"include": "#with"
		},
		{
			"include": "#expose"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#func_call"
		},
		{
			"include": "#mod_chain"
		},
		{
			"include": "#constructor"
		},
		{
			"include": "#sig_type"
		},
		{
			"include": "#vars"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"func_call": {
			"comment": "Function call (adapted from Rust)",
			"match": "\\b([a-z][A-Za-z0-9_]*|_[A-Za-z0-9_]+)\\s*\\(",
			"captures": {
				"1": {
					"name": "entity.name.function.morphic"
				}
			}
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.morphic",
				"match": "\\b(type|match|if|else|let|in|proc|do|then|module|import|file|from|expose|with)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.morphic",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.morphic",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"match": "(->|=|\\\\|<\\||\\|>)",
					"name": "keyword.operator.morphic"
				},
				{
					"comment": "Byte operators",
					"match": "(\\+|\\-|\\*|/|<|>|=|(<=)|(>=))&",
					"name": "keyword.operator.morphic"
				},
				{
					"comment": "Float operators",
					"match": "(\\+|\\-|\\*|/|<|>|=|(<=)|(>=))\\.",
					"name": "keyword.operator.morphic"
				},
				{
					"comment": "Int operators",
					"match": "(\\+|\\-|\\*|/|<|>|(<=)|(>=))",
					"name": "keyword.operator.morphic"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.morphic",
			"match": "[0-9]+((:?\\.[0-9]*)|b)?"
		},
		"sig_type": {
			"begin": ":",
			"end": "\\)|=|,",
			"patterns": [
				{
					"include": "#line_comment"
				},
				{
					"include": "#parens_type"
				},
				{
					"include": "#type"
				}
			]
		},
		"type_def": {
			"begin": "\\b(type)\\b",
			"end": "}",
			"patterns": [
				{
					"include": "#line_comment"
				},
				{
					"include": "#pub_keyword"
				},
				{
					"begin": "\\b([A-Z][A-Za-z0-9_]*)\\b\\s*\\(",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "constant.morphic"
						}
					},
					"patterns": [
						{
							"include": "#line_comment"
						},
						{
							"include": "#parens_type"
						},
						{
							"include": "#type"
						}
					]
				},
				{
					"include": "#type"
				}
			],
			"beginCaptures": {
				"1": {
					"name": "keyword.morphic"
				}
			}
		},
		"parens_type": {
			"begin": "\\(",
			"end": "\\)",
			"patterns": [
				{
					"include": "#parens_type"
				},
				{
					"include": "#type"
				}
			]
		},
		"type": {
			"patterns": [
				{
					"match": "\\b[A-Z][A-Za-z0-9_]*\\b",
					"name": "storage.type.morphic"
				},
				{
					"comment": "'proc' keyword",
					"match": "\\bproc\\b",
					"name": "keyword.morphic"
				},
				{
					"comment": "Type parameters",
					"match": "\\b[a-z][A-Za-z0-9_]*\\b",
					"name": "variable.parameter.morphic"
				}
			]
		},
		"vars": {
			"match": "\\b[a-z][A-Za-z0-9_]*\\b",
			"name": "source.morphic"
		},
		"line_comment": {
			"begin": "//",
			"end": "$",
			"name": "comment.line.double-slash.morphic"
		},
		"pub_keyword": {
			"match": "\\bpub\\b",
			"name": "keyword.morphic"
		},
		"mod_chain": {
			"match": "\\b([A-Z][A-Za-z0-9_]*\\.)+",
			"name": "source.morphic"
		},
		"constructor": {
			"match": "\\b[A-Z][A-Za-z0-9_]*\\b",
			"name": "constant.morphic"
		},
		"import": {
			"match": "\\b(import|module)\\b\\s*\\b([A-Z][A-Za-z0-9_]*)\\b",
			"captures": {
				"1": {
					"name": "keyword.morphic"
				},
				"2": {
					"name": "source.morphic"
				}
			}
		},
		"with": {
			"begin": "\\b(with)\\b\\s*{",
			"end": "}",
			"beginCaptures": {
				"1": {
					"name": "keyword.morphic"
				}
			},
			"name": "meta.import.morphic",
			"patterns": [
				{
					"include": "#line_comment"
				},
				{
					"match": "=",
					"name": "keyword.operator.morphic"
				}
			]
		},
		"expose": {
			"begin": "\\b(expose)\\b\\s*{",
			"end": "}",
			"beginCaptures": {
				"1": {
					"name": "keyword.morphic"
				}
			},
			"name": "meta.import.morphic",
			"patterns": [
				{
					"include": "#line_comment"
				},
				{
					"include": "#pub_keyword"
				},
				{
					"include": "#import"
				},
				{
					"include": "#expose"
				},
				{
					"include": "#type_expose"
				}
			]
		},
		"type_expose": {
			"patterns": [
				{
					"begin": "\\b([A-Z][A-Za-z0-9_]*)\\b\\s*{",
					"end": "}",
					"beginCaptures": {
						"1": {
							"name": "storage.type.morphic"
						}
					},
					"patterns": [
						{
							"include": "#line_comment"
						},
						{
							"include": "#pub_keyword"
						},
						{
							"match": "\\b([A-Z][A-Za-z0-9_]*)\\b",
							"captures": {
								"1": {
									"name": "constant.morphic"
								}
							}
						}
					]
				},
				{
					"match": "\\b([A-Z][A-Za-z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "storage.type.morphic"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.morphic"
}
